<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.wordpress.kaiyima.autismappjam.QuestionEight">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Question 8:"
        android:id="@+id/Q8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="When you cannot find your Mom around what should you do?"
        android:id="@+id/Q8textView2"
        android:layout_below="@+id/Q8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="A. Go home by yourself."
        android:id="@+id/Q8buttonA"
        android:layout_below="@+id/Q8textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:gravity="left|center" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="B. Tell someone near you that you cannot find your mother."
        android:id="@+id/Q8buttonB"
        android:textAllCaps="false"
        android:layout_below="@+id/Q8buttonA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:gravity="left|center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Q8answer"
        android:layout_below="@+id/Q8buttonB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lt_return_to_question_list"
        android:id="@+id/Q8return"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="previous"
        android:id="@+id/Q8pre"
        android:layout_above="@+id/Q8return"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="next"
        android:id="@+id/Q8nex"
        android:layout_below="@+id/Q8pre"
        android:layout_alignLeft="@+id/Q8pre"
        android:layout_alignStart="@+id/Q8pre" />

</RelativeLayout>
