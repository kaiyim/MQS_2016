<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wordpress.kaiyima.autismappjam.QuestFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Quest String"
            android:id="@+id/questString"
            android:layout_row="0"
            android:layout_rowSpan="5"
            android:layout_marginTop="99dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="28sp" />

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/chest1"
            android:background="@drawable/treasurechest"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/chest2"
            android:layout_toStartOf="@+id/chest2"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp" />

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/chest2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/treasurechest" />

        <ImageButton
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:id="@+id/chest3"
            android:background="@drawable/treasurechest"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chest2"
            android:layout_toEndOf="@+id/chest2"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/questText"
            android:layout_below="@+id/chest2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="28sp" />

    </RelativeLayout>
</FrameLayout>
